@inherits LayoutComponentBase

<!-- DashboardLayout.razor -->
<div class="flex h-screen bg-gray-100">
    <!-- Sidebar -->
    <aside class="hidden w-64 border-r bg-white shadow-lg md:block">
        <div class="p-6 text-xl font-bold text-red-600">
            Dashboard
        </div>
        <nav class="mt-6">
            <ul class="space-y-2">
                <li>
                    <a href="/dashboard"
                       class="flex items-center rounded-lg px-4 py-2 text-gray-700 hover:bg-red-100 hover:text-red-600">
                        <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M3 12l2-2m0 0l7-7 7 7M13 5v6h6" />
                        </svg>
                        Tổng quan
                    </a>
                </li>
                <li>
                    <a href="/dashboard/users"
                       class="flex items-center rounded-lg px-4 py-2 text-gray-700 hover:bg-red-100 hover:text-red-600">
                        <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M5.121 17.804A1 1 0 016 17h12a1 1 0 01.879.516l2 3.5A1 1 0 0120 23H4a1 1 0 01-.879-1.484l2-3.5zM6 17V9a6 6 0 1112 0v8" />
                        </svg>
                        Quản lý người dùng
                    </a>
                </li>
                <li>
                    <a href="/dashboard/reports"
                       class="flex items-center rounded-lg px-4 py-2 text-gray-700 hover:bg-red-100 hover:text-red-600">
                        <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M9 17v-6h6v6m2 4H7a2 2 0 01-2-2V5a2 2 0 012-2h5l2 2h5a2 2 0 012 2v14a2 2 0 01-2 2z" />
                        </svg>
                        Báo cáo
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <!-- Content -->
    <main class="flex-1 overflow-auto p-6">
        @Body
    </main>
</div>
