<div class="@(_visible ? "fixed inset-0 z-50 flex items-center justify-center" : "hidden")">
    <div class="absolute inset-0 bg-black opacity-30"></div>
    <div class="z-10 w-96 rounded bg-white p-4 shadow-lg">
        <h3 class="mb-2 text-lg font-semibold">@Title</h3>
        <p class="mb-4 text-sm text-gray-700">@Message</p>
        <div class="flex justify-end gap-2">
            <button class="rounded border px-3 py-1" @onclick="Cancel">Hủy</button>
            <button class="rounded bg-red-600 px-3 py-1 text-white" @onclick="Confirm">Xóa</button>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Xác nhận";
    [Parameter] public EventCallback OnConfirm { get; set; }
    private string Message { get; set; } = "";
    private bool _visible = false;

    public void Show(string message)
    {
        Message = message;
        _visible = true;
        StateHasChanged();
    }

    private void Cancel()
    {
        _visible = false;
    }

    private async Task Confirm()
    {
        _visible = false;
        await OnConfirm.InvokeAsync();
    }
}