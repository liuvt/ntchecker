@* @page "/admin/blogs/details/{Id:int}"*@
@inject BlogService BlogService
@inject NavigationManager Nav
@rendermode @(new InteractiveServerRenderMode(prerender: true))

<h1 class="mb-3 text-2xl font-semibold">Chi tiết bài viết</h1>

@if (model == null)
{
    <p>Đang tải...</p>
}
else
{
    <div class="rounded bg-white p-6 shadow">
        <div class="flex items-start gap-4">
            @if (!string.IsNullOrWhiteSpace(model.CoverImageUrl))
            {
                <img src="@model.CoverImageUrl" alt="cover" class="h-32 w-48 rounded object-cover" />
            }
            <div>
                <h2 class="text-xl font-bold">@model.Title</h2>
                <div class="text-sm text-gray-500">@model.Author • @model.CreatedAt.ToLocalTime():yyyy-MM-dd HH:mm</div>
                <div class="mt-2 text-sm text-gray-700">@model.Summary</div>
            </div>
        </div>

        <hr class="my-4" />

        <div class="prose max-w-none">
            @* Nếu là HTML: dùng MarkupString *@
            @((MarkupString)model.Content)
        </div>

        <div class="mt-4">
            <button class="rounded border px-3 py-2" @onclick="Back">Quay lại</button>
            <button class="rounded bg-blue-600 px-3 py-2 text-white" @onclick="@(() => Nav.NavigateTo($"/admin/blogs/edit/{model.Id}"))">Chỉnh sửa</button>
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    private Blog? model;

    protected override async Task OnInitializedAsync()
    {
        model = await BlogService.GetByIdAsync(Id);
    }
    private void Back() => Nav.NavigateTo("/admin/blogs");
}