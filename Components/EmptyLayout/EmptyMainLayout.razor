@inherits LayoutComponentBase

<MudThemeProvider Theme="@_theme" />
<MudPopoverProvider />
<MudDialogProvider FullWidth="true" MaxWidth="MaxWidth.ExtraExtraLarge" CloseButton="true" BackdropClick="false"
                   NoHeader="false" Position="DialogPosition.Center" CloseOnEscapeKey="true" />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent>
        @Body 
    </MudMainContent>
</MudLayout>

@code {
    protected MudTheme _theme = new MudTheme()
        {
        // Thay đổi font mặt định của MudBlazor
            Typography = new Typography()
            {
                Default = new DefaultTypography { FontFamily = new[] { "Trirong", "sans-serif" } },
                H1 = new H1Typography { FontFamily = new[] { "Trirong", "sans-serif" } },
                H2 = new H2Typography { FontFamily = new[] { "Trirong", "sans-serif" } },
                H3 = new H3Typography { FontFamily = new[] { "Trirong", "sans-serif" } },
                H4 = new H4Typography { FontFamily = new[] { "Trirong", "sans-serif" } },
                H5 = new H5Typography { FontFamily = new[] { "Trirong", "sans-serif" } },
                H6 = new H6Typography { FontFamily = new[] { "Trirong", "sans-serif" } },
                Subtitle1 = new Subtitle1Typography { FontFamily = new[] { "Trirong", "sans-serif" } },
                Subtitle2 = new Subtitle2Typography { FontFamily = new[] { "Trirong", "sans-serif" } },
                Button = new ButtonTypography { FontFamily = new[] { "Trirong", "sans-serif" } },
                Caption = new CaptionTypography { FontFamily = new[] { "Trirong", "sans-serif" } },
                Overline = new OverlineTypography { FontFamily = new[] { "Trirong", "sans-serif" } }
            },
        };
}