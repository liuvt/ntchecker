<CascadingAuthenticationState>
	<Router AppAssembly="@typeof(Program).Assembly">
		<Found Context="routeData">
			<AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">

				<NotAuthorized>
					<LayoutView Layout="@typeof(EmptyMainLayout)">
						<PageTitle>Không có quyền truy cập</PageTitle>
						<MessageError Title="Bạn chưa đăng nhập hoặc không có quyền truy cập!"
									  Link="/"
									  TitleLink="Đăng nhập ngay!" />
					</LayoutView>
				</NotAuthorized>

				<Authorizing>
					<LayoutView Layout="@typeof(EmptyMainLayout)">
						<MudProgressCircular Color="Color.Primary" Indeterminate="true" />
					</LayoutView>
				</Authorizing>

			</AuthorizeRouteView>
		</Found>

		<NotFound>
			<LayoutView Layout="@typeof(EmptyMainLayout)">
				<PageTitle>Không tìm thấy trang</PageTitle>
				<MessageError Title="Trang này không tồn tại."
							  Link="/"
							  TitleLink="Quay lại trang chủ" />
			</LayoutView>
		</NotFound>
	</Router>
</CascadingAuthenticationState>